<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>

  <div id="tools">
    <% if (loggedin) { %>
      <!-- Visible ONLY when logged in (to the left of Logout) -->
      <a title="Account Management" href="/account/">
        Welcome <%= accountData?.account_firstname ?? "Client" %>
      </a>

      <!-- Visible ONLY when logged in -->
      <a title="Click to log out" href="/account/logout">Logout</a>
    <% } else { %>
      <!-- Visible ONLY when NOT logged in -->
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>