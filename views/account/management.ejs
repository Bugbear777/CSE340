<main class="account-main">
  <section class="account-card">
    <h1><%= title %></h1>

    <% if (locals.messages && typeof locals.messages === "function") { %>
      <%- locals.messages() %>
    <% } %>

    <h2>Welcome <%= (accountData && accountData.account_firstname) ? accountData.account_firstname : "Client" %></h2>

    <div class="account-help" style="text-align:left; margin-top: 0.75rem;">
      <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
    </div>

    <% if (accountData && (accountData.account_type === "Employee" || accountData.account_type === "Admin")) { %>
      <div style="margin-top: 1.25rem; padding-top: 1.25rem; border-top: 1px solid var(--color-border);">
        <h3 style="margin: 0 0 0.5rem;">Inventory Management</h3>
        <p style="margin: 0 0 1rem; color: var(--color-text-muted);">
          Access the inventory tools to add, edit, or delete classifications and vehicles.
        </p>
        <a class="btn btn--primary" href="/inv/">Manage Inventory</a>
      </div>
    <% } %>
  </section>
</main>

