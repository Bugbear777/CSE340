<main class="inventory-main">
  <section class="inventory-card">
    <h1><%= title %></h1>

    <% if (locals.messages && typeof locals.messages === "function") { %>
      <%- locals.messages() %>
    <% } %>

    <% if (typeof errors !== "undefined" && errors && errors.length > 0) { %>
      <div class="flash flash--error">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <p>Confirm Deletion - The delete is permanent and cannot be undone.</p>

    <form class="inventory-form" action="/inv/delete" method="post">d
      <input type="hidden" name="inv_id" value="<%= inv_id %>">

      <div class="form-group">
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" readonly value="<%= inv_make %>">
      </div>

      <div class="form-group">
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" readonly value="<%= inv_model %>">
      </div>

      <div class="form-group">
        <label for="inv_year">Year</label>
        <input type="number" id="inv_year" name="inv_year" readonly value="<%= inv_year %>">
      </div>

      <div class="form-group">
        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" readonly value="<%= inv_price %>">
      </div>

      <button class="btn btn--primary" type="submit">Delete Vehicle</button>
    </form>
  </section>
</main>
