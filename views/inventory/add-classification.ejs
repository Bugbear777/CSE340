<main class="inventory-main">
  <section class="inventory-card">
    <h1><%= title %></h1>

    <% if (locals.messages && typeof locals.messages === "function") { %>
      <%- locals.messages() %>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <div class="flash flash--error">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form class="inventory-form" action="/inv/add-classification" method="post">
      <div class="form-group">
        <label for="classification_name">Classification Name</label>

        <div class="hint">
          Classification name cannot contain spaces or special characters.
        </div>

        <input
          type="text"
          id="classification_name"
          name="classification_name"
          required
          pattern="^[A-Za-z0-9]+$"
          value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
          placeholder="SUV"
        />
      </div>

      <button class="btn btn--primary" type="submit">Add Classification</button>
    </form>
  </section>
</main>

